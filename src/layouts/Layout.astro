---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import "../assets/index.pcss";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/content-genius-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Content Genius is AI Powered Publishing Platform. That helps you create content faster and smarter and publish it on multiple platforms."
    />
    <title>Content Genius</title>
  </head>
  <body class="dark:bg-[#0B0F19] text-gray-200">
    <Header />
    <div class="font-sans text-base leading-normal text-gray-800">
      <slot />
    </div>
    <Footer />
  </body>
</html>
