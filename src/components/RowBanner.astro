<section role="banner">
  <div class="container px-4 py-36 rounded-b-3xl">
    <!-- Title -->
    <h1
      class="mb-2 md:mb-5 font-bold text-center text-6xl lg:text-7xl pb-4 text-white"
    >
      <span class="text-pink-500">AI Powered</span><br />Content Studio
    </h1>
    <p class="text-lg md:text-2xl max-w-[48ch] text-center mx-auto mb-16">
      Collaboration with AI to streamline the content creation, collection and
      distribution process.
    </p>

    <!-- Form -->
    <div
      class="relative mb-16 bg-white bg-opacity-5 border border-gray-600 mx-auto items-center max-w-[420px] rounded-full p-[6px]"
    >
      <form class="flex text-sm sm:text-base" id="js-form">
        <input
          id="js-form-email"
          type="email"
          placeholder="Enter your email"
          class="bg-transparent py-3 flex-1 px-3 md:px-6 focus:outline-none focus-visible:bg-transparent"
        />
        <button
          id="js-form-submit"
          class="tracking-tigh rounded-full px-2 md:px-4 py-2 md:py-3 font-medium text-white bg-indigo-500"
          >Join the waitlist</button
        >
      </form>
      <div id="js-success-message" class="py-3 text-center w-full hidden">
        Youâ€™re on the waitlist!
      </div>
      <p
        id="js-error-message"
        class="text-center w-full text-sm absolute top-[100%] mt-2"
      >
      </p>
    </div>

    <!-- Image -->
    <img alt="Content Genius preview" src="./banner-composition.png" />

    <!-- Text -->
    <div class="text-center mt-24">
      <p class="font-medium text-xl lg:text-2xl text-white">
        Unleash your Content Genius
      </p>
      <p class="text-gray-400 lg:text-lg">No special skills required</p>
    </div>
  </div>

  <script>
    import "../scripts/subscription.js";
  </script>
</section>
