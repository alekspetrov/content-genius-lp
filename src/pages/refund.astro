---
import { getEntryBySlug } from "astro:content";
import TextLayout from "../layouts/TextLayout.astro";

const entry = await getEntryBySlug("static", "refund");
const { Content } = await entry.render();

export const frontmatter = {
  title: "Refund Policy",
  description:
    "Refund policy of Content Genius offers a 30-day money-back guarantee for new customers who are unsatisfied with the product",
  keywords: "Content Genius, Refund policy, money-back guarantee",
};
---

<TextLayout
  title={frontmatter.title}
  supportText={entry.data.supportText}
  description={frontmatter.description}
  keywords={frontmatter.keywords}
>
  <Content />
</TextLayout>
