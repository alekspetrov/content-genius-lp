---
import ToolsForm from "../../components/ToolsForm";
import Layout from "../../layouts/Layout.astro";

export const frontmatter = {
  title: "Grammar checker",
};

const ContentData = {
  description:
    "Improve your writing with a free AI-powered Grammar Checker. Enhance your grammar, punctuation, and sentence structure to ensure your writing is clear, concise, and error-free. Available in Spanish.",
  header: {
    title: "Grammar checker",
    text: "Our free Grammar Checker tool, powered by advanced AI technology, is your ultimate writing companion. From essays and articles to emails and social media posts, this tool helps you polish your writing and convey your message effectively. Improve your grammar, punctuation, and sentence structure in English and Spanish.",
    list: [
      "Enhance your grammar",
      "Improve punctuation",
      "Refine sentence structure",
    ],
  },
  body: {
    title: "Elevate Your Writing with AI Assistance",
    text: "Experience the power of our free Grammar Checker tool at Content Genius. This cutting-edge tool is designed to elevate your writing by providing you with accurate grammar suggestions, proper punctuation recommendations, and improved sentence structure. Get instant feedback and corrections for your writing in both English and Spanish.",
    cards: [
      {
        imageUrl: "",
        title: "Enhance your grammar",
        text: "Communicate clearly and effectively with the help of our free Grammar Checker. It identifies grammer errors and offers suggestions for improvement, ensuring your writing is error-free and professional. Available in English and Spanish.",
        cta: "Enhance your grammar",
        link: "https://app.contentgenius.io/",
      },
      {
        imageUrl: "",
        title: "Improve punctuation",
        text: "Master the art of punctuation with our free Grammar Checker. It detects punctuation mistakes and provides guidance to help you add the right punctuation marks, making your writing more coherent and impactful. Available in English and Spanish.",
        cta: "Improve punctuation",
        link: "https://app.contentgenius.io/",
      },
      {
        imageUrl: "",
        title: "Refine sentence structure",
        text: "Craft well-structured sentences with our free Grammar Checker. It analyzes your writing and offers suggestions to improve sentence clarity and flow, ensuring your message is delivered effectively. Available in English and Spanish.",
        cta: "Refine sentences",
        link: "https://app.contentgenius.io/",
      },
    ],
  },
};
---

<Layout title={ContentData.header.title} description={ContentData.description}>
  <main class="py-20">
    <article itemscope itemtype="https://schema.org/TechArticle">
      <div class="container">
        <header class="relative lg:mb-48">
          <!-- Title -->
          <h1
            class="lg:w-1/2 lg:pr-1 text-gray-900 font-semibold text-4xl lg:text-5xl lg:leading-[1.1] mb-8"
            itemprop="headline"
          >
            {ContentData.header.title}
          </h1>
          <!-- Form -->
          <div
            class="lg:w-1/2 lg:absolute lg:-top-4 lg:right-0 col-span-1 row-span-2 mb-8 lg:mb-0"
          >
            <ToolsForm
              client:load
              title="Grammar checker"
              tool_name="grammar-checker"
              cta="Check grammar"
              fields={[
                {
                  value: "",
                  type: "textarea",
                  label: "What content do you need to check?",
                  limit: 1000,
                  optionName: "content",
                  placeholder: "Place your content here...",
                },
                {
                  value: "autodetect",
                  type: "select",
                  label: "Choose a language",
                  optionName: "language",
                  options: [
                    {
                      value: "autodetect",
                      text: "Autodetect",
                    },
                    {
                      value: "english",
                      text: "English",
                    },
                    {
                      value: "spanish",
                      text: "Spanish",
                    },
                    {
                      value: "german",
                      text: "German",
                    },
                    {
                      value: "french",
                      text: "French",
                    },
                    {
                      value: "german",
                      text: "German",
                    },
                  ],
                },
              ]}
            />
          </div>
          <!-- Text -->
          <div
            class="lg:w-1/2 lg:pr-12 space-y-4 col-span-1 lg:space-y-8 text-lg"
            itemprop="articleBody"
          >
            <p>
              {ContentData.header.text}
            </p>
            <ul
              class="decoration-slate-400 list-inside list-image-[url(/checkmark-sm.svg)] space-y-2"
            >
              {
                ContentData.header.list.map((item, index) => (
                  <li class="hover:text-[#8B5CF6] transition">
                    <a href={`#card-${index}`}>{item}</a>
                  </li>
                ))
              }
            </ul>
          </div>
          <!-- Bubble -->
          <div
            class="absolute -z-10 -top-24 -left-24 w-[18rem] h-[18rem] bg-gradient-to-tr from-fuchsia-50 to-white rounded-full"
          >
          </div>
        </header>
      </div>
      <div class="border-t border-gray-200 mt-24 py-12">
        <div class="container">
          <section class="space-y-4 max-w-4xl mb-12">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
              {ContentData.body.title}
            </h2>
            <p class="md:text-lg mb-12">
              {ContentData.body.text}
            </p>
          </section>
          <div
            class="mx-auto lg:grid lg:grid-cols-3 gap-4 md:gap-8 space-y-3 lg:space-y-0"
          >
            {
              ContentData.body.cards.map((item, index) => (
                <section class="border border-gray-200 bg-white col-span-1 p-8 md:pr-8 border-gray-150 rounded-lg bg-[url('/bg-dots-1.png')] bg-no-repeat bg-bottom">
                  <div class="flex flex-col h-full">
                    <h2
                      id={`card-${index}`}
                      class="font-medium text-gray-900 text-xl mb-2"
                    >
                      {item.title}
                    </h2>
                    <p class="text-sm flex-1">{item.text}</p>
                    <div class="mt-2">
                      <a
                        href="https://app.contentgenius.io/tools/grammar-checker"
                        class="text-white bg-pink-500 px-6 py-2 rounded-full mt-4 font-medium inline-block"
                      >
                        {item.cta}
                      </a>
                    </div>
                  </div>
                </section>
              ))
            }
          </div>
        </div>
      </div>
    </article>
  </main>
</Layout>

