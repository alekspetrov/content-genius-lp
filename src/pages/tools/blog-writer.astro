---
import ToolsForm, { Field } from "../../components/ToolsForm";
import Layout from "../../layouts/Layout.astro";

export const frontmatter = {
  title: "Blog post writer",
};

const ContentData = {
  title: "SEO Blog writer",
  description:
    "Effortlessly generate engaging blog posts and articles with the AI-powered Blog Writer tool.",
  header: {
    title: "Blog writer",
    text: "Our Blog Writer tool, powered by advanced AI technology, is your perfect ally for effortlessly creating high-quality blog posts and articles. Whether you're a professional blogger or a business owner looking to enhance your content marketing strategy, this tool ensures your message is effectively conveyed.",
    list: [
      "Generate engaging blog posts",
      "Produce informative articles",
      "Enhance your content marketing",
    ],
  },
  toolsFormConfig: {
    tool_name: "blog-writer",
    cta: "Start writing",
  },
  body: {
    title: "Unleash Your Creativity with AI Assistance",
    text: "Unleash the power of AI with our Blog Writer tool at Content Genius. This innovative tool is designed to cater to all your content writing needs, providing you with a unique blend of contextual understanding and creative text generation. Say goodbye to writer's block and let our AI assistant inspire your writing.",
    cards: [
      {
        imageUrl: "",
        title: "Generate engaging blog posts",
        text: "Capture your readers' attention with captivating blog posts generated by our Blog Writer tool. It helps you craft compelling narratives, informative articles, and engaging content that keeps your audience coming back for more.",
        cta: "Start writing",
        link: "https://app.contentgenius.io/",
      },
      {
        imageUrl: "",
        title: "Produce informative articles",
        text: "Become a thought leader in your industry by producing informative and well-researched articles with the help of our Blog Writer tool. It assists you in generating content that educates, informs, and adds value to your readers.",
        cta: "Start writing",
        link: "https://app.contentgenius.io/",
      },
      {
        imageUrl: "",
        title: "Enhance your content marketing",
        text: "Supercharge your content marketing efforts with our Blog Writer tool. It enables you to create a consistent stream of high-quality content, saving you time and effort while attracting and engaging your target audience.",
        cta: "Start writing",
        link: "https://app.contentgenius.io/",
      },
    ],
  },
};

const ToolsFormFields: Field[] = [
  {
    value: "",
    type: "textarea",
    label: "Outline your blog post idea",
    limit: 500,
    optionName: "content",
    placeholder: "Place original content...",
  },
  {
    value: "",
    type: "input",
    label: "SEO keywords",
    limit: 200,
    optionName: "keywords",
    placeholder: "Specify a words by comma...",
  },
  {
    value: "english",
    type: "select",
    label: "Choose language",
    optionName: "language",
    options: [
      {
        value: "english",
        text: "English",
      },
      {
        value: "spanish",
        text: "Spanish",
      },
      {
        value: "german",
        text: "German",
      },
      {
        value: "french",
        text: "French",
      },
      {
        value: "german",
        text: "German",
      },
    ],
  },
];
---

<Layout title={ContentData.header.title} description={ContentData.header.title}>
  <main class="py-20">
    <article itemscope itemtype="https://schema.org/TechArticle">
      <div class="container">
        <header class="relative lg:mb-48">
          <!-- Title -->
          <h1
            class="lg:w-1/2 lg:pr-1 text-gray-900 font-semibold text-4xl lg:text-5xl lg:leading-[1.1] mb-8"
            itemprop="headline"
          >
            {ContentData.header.title}
          </h1>
          <!-- Form -->
          <div
            class="lg:w-1/2 lg:absolute lg:-top-4 lg:right-0 col-span-1 row-span-2 mb-8 lg:mb-0"
          >
            <ToolsForm
              client:load
              title={ContentData.title}
              tool_name={ContentData.toolsFormConfig.tool_name}
              cta={ContentData.toolsFormConfig.cta}
              fields={ToolsFormFields}
            />
          </div>
          <!-- Text -->
          <div
            class="lg:w-1/2 lg:pr-12 space-y-4 col-span-1 lg:space-y-8 text-lg"
            itemprop="articleBody"
          >
            <p>
              {ContentData.header.text}
            </p>
            <ul
              class="decoration-slate-400 list-inside list-image-[url(/checkmark-sm.svg)] space-y-2"
            >
              {
                ContentData.header.list.map((item, index) => (
                  <li class="hover:text-[#8B5CF6] transition">
                    <a href={`#card-${index}`}>{item}</a>
                  </li>
                ))
              }
            </ul>
          </div>
          <!-- Bubble -->
          <div
            class="absolute -z-10 -top-24 -left-24 w-[18rem] h-[18rem] bg-gradient-to-tr from-fuchsia-50 to-white rounded-full"
          >
          </div>
        </header>
      </div>
      <div class="border-t border-gray-200 mt-24 py-12">
        <div class="container">
          <section class="space-y-4 max-w-4xl mb-12">
            <h2 class="text-2xl md:text-3xl font-bold text-gray-900">
              {ContentData.body.title}
            </h2>
            <p class="md:text-lg mb-12">
              {ContentData.body.text}
            </p>
          </section>
          <div
            class="mx-auto lg:grid lg:grid-cols-3 gap-4 md:gap-8 space-y-3 lg:space-y-0"
          >
            {
              ContentData.body.cards.map((item, index) => (
                <section class="border border-gray-200 bg-white col-span-1 p-8 md:pr-8 border-gray-150 rounded-lg bg-[url('/bg-dots-1.png')] bg-no-repeat bg-bottom">
                  <div class="flex flex-col h-full">
                    <h2
                      id={`card-${index}`}
                      class="font-medium text-gray-900 text-xl mb-2"
                    >
                      {item.title}
                    </h2>
                    <p class="text-sm flex-1">{item.text}</p>
                    <div class="mt-2">
                      <a
                        href={`https://app.contentgenius.io/tools/${ContentData.toolsFormConfig.tool_name}`}
                        class="text-white bg-pink-500 px-6 py-2 rounded-full mt-4 font-medium inline-block"
                      >
                        {item.cta}
                      </a>
                    </div>
                  </div>
                </section>
              ))
            }
          </div>
        </div>
      </div>
    </article>
  </main>
</Layout>

