---
import { map } from "astro/zod";
import Layout from "../layouts/Layout.astro";

const PRICING = [
  {
    id: 1,
    name: "Freelancer",
    price: 19,
    period: "/mo",
    description: "Ideal for independent creators",
    features: [
      "GPT-4",
      "50,000 Tokens (~37,500 Words)",
      "1GB Storage",
      "10 AI Assistants",
      "AI Editing tools",
      "Support with low priority",
      "1 User",
    ],
    cta: "Start Free",
    disabled: false,
    product_id: "77513",
    variants: {
      monthly: "80315",
      yearly: "80722",
    },
  },
  {
    id: 2,
    name: "Influencer",
    price: 49,
    period: "/mo",
    description: "Grow your brand and engage your audience",
    features: [
      "GPT-4",
      "100,000 Tokens (~75,000 Words)",
      "4GB Storage",
      "50+ Assistants",
      "AI Editing tools",
      "Support with high priority",
      "1 User",
    ],
    cta: "Start Free",
    disabled: false,
    product_id: "77844",
    variants: {
      monthly: "80725",
      yearly: "80728",
    },
  },
  {
    id: 3,
    name: "Business",
    price: 99,
    period: "/mo",
    description: "Elevate your organizationâ€™s content strategy",
    features: [
      "GPT-4",
      "200,000 Tokens (~150,000 Words)",
      "8GB Storage",
      "50+ Assistants",
      "AI Editing tools",
      "Support with highest priority",
      "Up to 10 users (not available in Alpha)",
    ],
    cta: "Start Free",
    disabled: false,
    product_id: "77846",
    variants: {
      monthly: "80729",
      yearly: "80731",
    },
  },
];
---

<Layout title="Content Genius | Pricing">
  <main class="py-20">
    <article class="container">
      <header class="text-center mb-20">
        <h2 class="text-white font-semibold text-3xl lg:text-5xl mb-6">
          Unleash Your <span class="text-pink-500">Content Genius</span>
        </h2>
        <a
          href="/early-adopters-discount/"
          class="text-gray-200 border bg-gray-700 border-gray-500 rounded-full inline-block px-4 py-2"
        >
          Early adopters program (-30%)
        </a>
      </header>
      <div
        class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8 items-center"
      >
        {
          PRICING.map((tier) => (
            <div
              class={`py-8 px-8 rounded-xl ${
                tier.id === 2
                  ? "border-indigo-500 border-2 xl:py-14"
                  : "border-gray-700 border"
              }`}
            >
              <div class="mb-8 text-center">
                <h3 class="font-semibold text-xl text-pink-500 mb-2">
                  {tier.name}
                </h3>
                <p class="mb-8 text-white font-semibold">
                  <span class="text-2xl">
                    ${`${Math.round((tier.price * 70) / 100)}`}
                    <span class="text-sm">/mo</span>
                  </span>
                  <span class="line-through text-gray-400">${tier.price}</span>
                </p>
              </div>
              <div class="text-center">
                <a
                  href="https://app.contentgenius.io/"
                  class={`block mb-2 text-white w-full py-3 rounded-md font-semibold ${
                    tier.id === 2 ? "bg-indigo-500 " : "bg-gray-700 "
                  }`}
                >
                  {tier.cta}
                </a>
                <div class="text-gray-450 text-xs">5-day free trial period</div>
              </div>
              <ul class="my-8 space-y-2 list-image-[url('./list-checkmark.svg')]">
                {tier.features.map((feature) => (
                  <li class="flex items-center gap-2">
                    <span class="flex-shrink-0">
                      <img src="/list-checkmark.svg" />
                    </span>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </article>
  </main>
</Layout>
