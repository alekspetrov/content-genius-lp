    period: "/mo",
    description: "Ideal for independent creators",
    features: [
      "GPT 4",
      "50,000 Tokens (~66,500 Words)",
      "10 AI Assistants",
      "Unlimited Notes",
      "Support with low priority",
    ],
    cta: "Start Free",
    disabled: false,
    product_id: "77513",
    variants: {
      monthly: "80315",
      yearly: "80722",
    },
  },
  {
    id: 2,
    name: "Influencer",
    price: 28,
    period: "/mo",
    description: "Grow your brand and engage your audience",
    features: [
      "GPT-4",
      "200,000 Tokens (~266,000 Words)",
      "20 AI Assistants",
      "Unlimited Notes",
      "Support with high priority",
    ],
    cta: "Start Free",
    disabled: false,
    product_id: "77844",
    variants: {
      monthly: "80725",
      yearly: "80728",
    },
  },
  {
    id: 3,
    name: "Business",
    price: 99,
    period: "/mo",
    description: "Elevate your organizationâ€™s content strategy",
    features: [
      "GPT-4",
      "500,000 Tokens (~665,000 Words)",
      "Unlimited Assistants",
      "Unlimited Notes",
      "Support with highest priority",
    ],
    cta: "Start Free",
    disabled: false,
    product_id: "77846",
    variants: {
