---
import RowDiscount from "../../components/RowDiscount.astro";
import RowTextImage from "../../components/RowTextImage.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Content Genius for marketers">
  <main class="py-20">
    <article>
      <header class="mb-24 container xl:w-1/2 text-center">
        <h2
          class="text-white font-semibold text-4xl lg:text-6xl lg:leading-[1.1] mb-4"
        >
          Supercharge marketing compaigns
        </h2>
        <p class="text-xl mb-12 text-gray-400">
          Content Genious can boost your marketing campaigns with powerful ideas
          generated based on your audience and product features. Let specialized
          assistants do your routine job.
        </p>
        <a
          href="https://app.contentgenius.io/"
          class="inline-block bg-indigo-500 rounded-full text-white px-6 py-3 whitespace-nowrap font-medium"
          >Start free trial</a
        >
      </header>
      <section class="bg-gray-900">
        <div class="container py-12 space-y-8">
          <RowTextImage
            title="Content Creation & Optimization"
            text="Generate high-quality, engaging, and SEO-friendly content in no time. Say goodbye to writerâ€™s block and hello to fresh, creative content that drives results."
            ctaText="Start generating"
            image={{
              alt: "Personal blogging assistatnt prompt",
              url: "/blog/ai-use-case-marketing-1.png",
            }}
          />
          <RowTextImage
            imageFirst={true}
            title="Audience Insights & Personalization"
            text="Unlock deep insights about your target audience based on your product description. Craft personalized messages and offers that resonate with your customers, boosting conversion rates and brand loyalty."
            ctaText="Get insights"
            image={{
              alt: "Social media assistant prompt",
              url: "/blog/ai-use-case-marketing-2.png",
            }}
          />
          <RowTextImage
            title="Social Media Management"
            text="Streamline your social media management with our AI-powered chatbot assistants. Write engaging posts, generate catchy titles, find performant hash tags, store insigth in notes."
            ctaText="Boost audience"
            image={{
              alt: "Personalized lerning assistant prompt",
              url: "/blog/ai-use-case-marketing-3.png",
            }}
          />
        </div>
      </section>
      <RowDiscount />
    </article>
  </main>
</Layout>
