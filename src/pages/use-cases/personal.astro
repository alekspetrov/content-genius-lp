---
import RowTextImage from "../../components/RowTextImage.astro";
import Layout from "../../layouts/Layout.astro";

import { Image } from "astro:assets";
import blog1Image from "../../assets/use-cases/personal-1.png";
import blog2Image from "../../assets/use-cases/personal-2.png";
import blog3Image from "../../assets/use-cases/personal-3.png";

export const frontmatter = {
  title: "Content Genius for personal usage",
};
---

<Layout title="Content Genius for personal usage">
  <main class="py-20">
    <article class="container">
      <header class="relative mb-24">
        <h1
          class="text-gray-900 font-semibold text-4xl lg:text-5xl lg:leading-[1.1] mb-4 max-w-[25ch]"
        >
          Improve your personal ChatGPT experience
        </h1>
        <p class="max-w-[65ch] text-lg lg:text-xl leading-8 mb-8 md:mb-12">
          Content Genious supercharges your productivity when writing blog
          articles, maintaining social media profiles, developing skills, and
          more. Use specialized assistants, and create your team of specialists
          to meet your unique cases.
        </p>
        <a
          href="https://app.contentgenius.io/"
          class="inline-block bg-pink-500 rounded-full text-white px-6 py-3 whitespace-nowrap font-medium"
          >Start free trial</a
        >
        <div
          class="absolute -z-10 -top-24 -left-24 w-[18rem] h-[18rem] bg-gradient-to-tr from-fuchsia-50 to-white rounded-full"
        >
        </div>
        <div
          class="absolute -z-10 -bottom-0 right-0 w-[18rem] h-[18rem] bg-gradient-to-tr from-indigo-50 to-white rounded-full"
        >
        </div>
      </header>
      <section>
        <div class="container py-12 space-y-8">
          <RowTextImage
            title="Boost your writing skills"
            text="Enhance your writing skills with AI-generated suggestions specified for your blog topic, format, and audience."
            ctaText="Create blog post"
          >
            <Image
              loading="lazy"
              src={blog1Image}
              alt="Personal blogging assistatnt prompt"
            />
          </RowTextImage>

          <RowTextImage
            imageFirst={true}
            title="Level up you social media game"
            text="Unleash your imagination with our AI-powered storytelling assistant, generating captivating stories and social media blog posts."
            ctaText="Write story"
          >
            <Image
              loading="lazy"
              src={blog2Image}
              alt="Social media assistant prompt"
            />
          </RowTextImage>
          <RowTextImage
            title="Personalize Learning"
            text="Customize your AI assistant to help you learn and grow in your desired areas, providing content and resources based on your interests and goals."
            ctaText="Start learning"
          >
            <Image
              loading="lazy"
              src={blog3Image}
              alt="Personalized lerning assistant prompt"
            />
          </RowTextImage>
        </div>
      </section>
    </article>
  </main>
</Layout>
