@tailwind base;
@tailwind components;
@tailwind utilities;

@layer {
  .wrapper {
    @apply px-8 max-w-7xl mx-auto;
  }

  .text-content {
    @apply text-gray-700 text-lg flex flex-col gap-6 max-w-2xl mx-auto;
  }

  .text-content > * {
    @apply mb-4;
  }

  .text-content ul,
  .text-content ol {
    @apply space-y-4;
  }

  .text-content li {
    @apply list-disc list-outside;
  }
}
